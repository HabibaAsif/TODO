@model Backend.Models.TasksViewModel

@{
    ViewData["Title"] = "Task List";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background: linear-gradient(-135deg, #c850c0, #4158d0);
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
            font-family: 'Poppins', sans-serif;
            padding-top: 56px;
        }

        .container {
            display: flex;
            flex-direction: column;
            background: #fff;
            padding: 20px;
            border-radius: 15px;
            box-shadow: 0px 15px 20px rgba(0, 0, 0, 0.1);
            max-width: 90vw;
            width: 100%;
            margin-top: 50px;
        }

        h2 {
            font-size: 24px;
            margin-bottom: 20px;
            color: #333;
            text-align: center;
        }

        .btn-primary, .btn-danger {
            border: none;
            border-radius: 25px;
            padding: 10px;
            font-size: 18px;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
            display: inline-block;
            text-align: center;
        }

        .btn-primary {
            background: linear-gradient(-135deg, #c850c0, #4158d0);
            color: #fff;
            width: 100%; 
            margin-bottom: 20px;
        }

            .btn-primary:hover {
                opacity: 0.9;
            }

        .btn-danger {
            background-color: #ff6b6b;
            color: #fff;
            width: 150px;
        }

            .btn-danger:hover {
                opacity: 0.9;
            }

        .btn-edit {
            background: linear-gradient(-135deg, #c850c0, #4158d0);
            color: #fff;
            width: 50px; 
        }

            .btn-edit:hover {
                opacity: 0.9;
            }

        .table {
            width: 100%;
            color: #333;
            margin-top: 20px;
            border-collapse: separate;
            border-spacing: 0 10px;
        }

            .table th, .table td {
                text-align: left;
                padding: 12px;
            }

            .table thead {
                background: #f8f9fa;
            }

            .table tbody tr:nth-child(odd) {
                background: #f9f9f9;
            }

        .btn-group {
            display: flex;
            gap: 10px;
            justify-content: flex-start;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Your Tasks</h2>
        <a asp-action="Add" class="btn btn-primary">Add Task</a>

        <table class="table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var task in Model.Tasks)
                {
                    <tr>
                        <td>@task.Title</td>
                        <td>@(task.Status ? "Completed" : "Pending")</td>
                        <td>
                            <div class="btn-group">
                                <form asp-action="Delete" method="post" asp-route-id="@task.ID">
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                                <a asp-action="Edit" asp-route-id="@task.ID" class="btn btn-edit">Edit</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
