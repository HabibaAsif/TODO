@model Backend.Models.TaskList

@{
    ViewData["Title"] = "Edit Task";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background: linear-gradient(-135deg, #c850c0, #4158d0);
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
            font-family: 'Poppins', sans-serif;
            padding-top: 56px;
        }

        .container {
            flex-direction: column;
            background: #fff;
            padding: 10px;
            border-radius: 15px;
            box-shadow: 0px 15px 20px rgba(0, 0, 0, 0.1);
            max-width: 50vw;
            max-height: 80vh;
            width: 100%;
            margin-top: 50px;
        }

        h1 {
            font-size: 24px;
            margin-bottom: 20px;
            color: #333;
            text-align: center;
        }

        .form-label {
            font-size: 18px;
            color: #333;
        }

        .form-control {
            width: 100%;
            height: 50px;
            border-radius: 25px;
            padding-left: 20px;
            border: 1px solid lightgrey;
            transition: all 0.3s ease;
            font-size: 16px;
            text-align: left;
        }

            .form-control:focus {
                border-color: #4158d0;
            }

        .btn-primary {
            background: linear-gradient(-135deg, #c850c0, #4158d0);
            color: #fff;
            border: none;
            border-radius: 25px;
            padding: 10px;
            font-size: 18px;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
            width: 100%;
            margin-top: 20px;
        }

            .btn-primary:hover {
                opacity: 0.9;
            }

        .form-check {
            display: flex;
            align-items: center;
            margin-top: 20px;
        }

        .form-check-input {
            margin-right: 10px;
        }

        .form-check-label {
            font-size: 16px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Edit Task</h1>
        @if (Model is null)
        {
            <p>No task found with this id</p>
        }
        else
        {
            <form method="post">
                <div class="mt-3">
                    <label class="form-label">Task ID</label>
                    <input type="text" class="form-control" asp-for="ID" readonly />
                </div>

                <div class="mt-3">
                    <label class="form-label">Title</label>
                    <input type="text" class="form-control" asp-for="Title" />
                </div>

                <div class="mt-3 form-check">
                    <input type="checkbox" class="form-check-input" id="completed" asp-for="Status" />
                    <label class="form-check-label" for="completed">Completed</label>
                </div>

                <div class="mt-3">
                    <button type="submit" class="btn-primary">Save</button>
                </div>
            </form>
        }
    </div>
</body>
</html>
