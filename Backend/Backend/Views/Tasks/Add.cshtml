@model Backend.Models.AddTaskViewModel

@{
    ViewData["Title"] = "Add Task";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background: linear-gradient(-135deg, #c850c0, #4158d0);
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
            font-family: 'Poppins', sans-serif;
            color: #fff;
            padding-top: 56px;
        }

        .container {
            flex-direction: column;
            background: #fff;
            padding: 10px;
            border-radius: 15px;
            box-shadow: 0px 15px 20px rgba(0, 0, 0, 0.1);
            max-width: 40vw;
            max-height: 55vh;
            width: 100%;
            margin-top: 50px;
        }

        h2 {
            font-size: 24px;
            margin-bottom: 20px;
            color: #333;
            text-align: center;
        }

        .form-group {
            margin-bottom: 15px;
            text-align: left;
        }

        .form-control {
            width: 100%;
            height: 50px;
            border-radius: 25px;
            padding-left: 20px;
            border: 1px solid lightgrey;
            transition: all 0.3s ease;
            font-size: 16px;
            text-align: left;
        }

            .form-control:focus {
                border-color: #4158d0;
            }

        .btn-primary {
            background: linear-gradient(-135deg, #c850c0, #4158d0);
            color: #fff;
            border: none;
            border-radius: 25px;
            padding: 10px;
            font-size: 18px;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
            width: 100%;
            margin-top: 20px;
        }

            .btn-primary:hover {
                opacity: 0.9;
            }
    </style>
</head>
<body>
    <div class="container">
        <h2>Add Task</h2>

        <form asp-action="Add" method="post">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Add Task</button>
        </form>
    </div>
</body>
</html>
